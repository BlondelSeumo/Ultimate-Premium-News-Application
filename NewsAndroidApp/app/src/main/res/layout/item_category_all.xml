<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="120dp"
    android:layout_height="match_parent"
    android:layoutDirection="ltr"

    >
    <RelativeLayout
        android:elevation="4dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="12dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/bg_quote"
        android:id="@+id/relative_layout_show_all_categories_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="120dp"
            android:layout_height="wrap_content">
            <ImageView
                android:visibility="gone"
                android:clickable="false"
                android:focusable="false"
                android:padding="7dp"
                android:tint="@color/white"
                app:srcCompat="@drawable/ic_more"
                android:id="@+id/image_view_item_category_status"
                android:layout_width="120dp"
                android:layout_height="50dp" />
            <TextView
                android:id="@+id/text_view_item_category_status"
                android:layout_width="120dp"
                android:layout_height="90dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="7dp"
                android:paddingBottom="7dp"
                android:gravity="center"
                android:text="@string/all_categories"
                android:textColor="@color/white"
                android:textStyle="bold"/>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>