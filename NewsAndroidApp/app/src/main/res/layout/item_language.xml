<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <RelativeLayout
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:visibility="visible"
        android:id="@+id/relative_layout_item_question_choice_global"
        android:orientation="horizontal"
        android:layout_marginBottom="6dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/bg_choice_4"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <RelativeLayout
            android:id="@+id/relativeLayout_main"

            android:visibility="invisible"
            android:background="#60cccccc"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="60dp">
            <CheckedTextView
                android:id="@+id/checked_text_item"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:checkMark="?android:attr/listChoiceIndicatorMultiple"
                android:checkMarkTint="@color/white"
                />
        </RelativeLayout>
        <ImageView
            android:id="@+id/image_view_iten_language"
            android:padding="10dp"
            android:src="@drawable/ic_global"
            android:layout_width="60dp"
            android:layout_height="60dp" />
        <TextView
            android:background="@drawable/border_left_transparent"
            android:id="@+id/text_view_item_language"
            android:layout_marginLeft="60dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="Label"
            android:gravity="center|left"
            android:textColor="@color/white"
            android:textStyle="bold"/>
        <ImageView
            android:padding="10dp"
            android:layout_margin="5dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/progress_value"
            android:layout_width="50dp"
            android:layout_height="50dp" />
        <ImageView
            android:visibility="gone"
            android:id="@+id/image_view_item_vote_choice"
            app:srcCompat="@drawable/ic_check"
            android:padding="10dp"
            android:layout_margin="5dp"
            android:layout_alignParentRight="true"
            android:layout_width="50dp"
            android:layout_height="50dp" />

    </RelativeLayout>
</RelativeLayout>