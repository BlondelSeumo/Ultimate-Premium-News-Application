<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="ltr"
    tools:context=".ui.Activities.SettingsActivity">
    <RelativeLayout
        android:id="@+id/acb"
        android:background="@drawable/bg_home"
        android:layout_width="match_parent"
        android:layout_height="70dp">
    </RelativeLayout>
    <android.support.design.widget.AppBarLayout
        android:theme="@style/AppTheme.AppBarOverlay"
        android:id="@+id/appBarLayout"
        app:elevation="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <FrameLayout
            android:id="@+id/toolbar_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.v7.widget.Toolbar
                app:layout_scrollFlags="scroll|enterAlways"
                app:elevation="0dp"
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/colorAccent"
                />
        </FrameLayout>
    </android.support.design.widget.AppBarLayout>
    <ScrollView
        android:layout_marginTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/appBarLayout">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:background="@drawable/border_bottom"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:tint="@color/primary_text_light"
                    android:padding="10dp"
                    app:srcCompat="@drawable/ic_cloud"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />
                <TextView
                    android:textColor="@color/primary_text"
                    android:textStyle="bold"
                    android:paddingLeft="5dp"
                    android:gravity="center|left"
                    android:text="Enable weather widget"
                    android:layout_marginLeft="50dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp" />
                <com.rm.rmswitch.RMSwitch

                    android:layout_marginTop="15dp"
                    android:id="@+id/rm_switch_view_weather_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    app:checked="false"
                    app:forceAspectRatio="false"
                    app:enabled="true"
                    app:switchDesign="android"
                    app:switchBkgCheckedColor="@color/green"
                    app:switchBkgNotCheckedColor="@color/red"
                    app:switchToggleCheckedColor="@color/green"
                    app:switchToggleCheckedImage="@drawable/ic_check_white_24dp"
                    app:switchToggleNotCheckedColor="@color/red"
                    app:switchToggleNotCheckedImage="@drawable/ic_close"/>
            </RelativeLayout>
            <RelativeLayout
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:background="@drawable/border_bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:tint="@color/primary_text_light"
                    android:padding="10dp"
                    app:srcCompat="@drawable/ic_settings"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />
                <TextView
                    android:id="@+id/text_view_temp_unit_title"
                    android:textColor="@color/primary_text"
                    android:textStyle="bold"
                    android:paddingLeft="5dp"
                    android:gravity="center|left"
                    android:text="Unite weather : Celsius"
                    android:layout_marginLeft="50dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp" />

                <com.rm.rmswitch.RMSwitch
                    android:id="@+id/rm_switch_view_weather_unit"
                    android:layout_marginTop="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    app:checked="true"
                    app:forceAspectRatio="false"
                    app:enabled="false"
                    app:switchDesign="android"
                    app:switchBkgCheckedColor="@color/yellow"
                    app:switchBkgNotCheckedColor="@color/yellow"
                    app:switchToggleCheckedColor="@color/yellow"
                    app:switchToggleCheckedImage="@drawable/ic_c"
                    app:switchToggleNotCheckedColor="@color/yellow"
                    app:switchToggleNotCheckedImage="@drawable/ic_f"/>
            </RelativeLayout>
            <RelativeLayout
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:background="@drawable/border_bottom"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:padding="5dp"
                    android:tint="@color/primary_text_light"
                    app:srcCompat="@drawable/ic_notification"
                    android:layout_width="40dp"
                    android:layout_height="40dp" />
                <LinearLayout
                    android:layout_marginLeft="50dp"
                    android:orientation="vertical"
                    android:layout_marginRight="60dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:textSize="16dp"
                        android:padding="2dp"
                        android:textColor="@color/primary_text"
                        android:gravity="center|left"
                        android:text="@string/title_notification"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:padding="2dp"
                        android:textSize="13dp"
                        android:layout_weight="1"
                        android:gravity="center|left"
                        android:text="@string/label_notification"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>

                <Switch
                    android:checked="true"
                    android:id="@+id/switch_button_notification"
                    android:gravity="center_vertical"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true" />
            </RelativeLayout>
            <RelativeLayout
                android:background="@drawable/border_bottom"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:id="@+id/linear_layout_clea_cache"
                    android:clickable="true"
                    android:background="?attr/selectableItemBackground"
                    android:paddingBottom="@dimen/activity_vertical_margin"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:paddingTop="@dimen/activity_vertical_margin"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_marginRight="10dp"
                        android:padding="5dp"
                        android:tint="@color/primary_text_light"
                        app:srcCompat="@drawable/ic_clear_all"
                        android:layout_width="40dp"
                        android:layout_height="40dp" />
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_marginRight="0dp"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent">
                    <TextView
                        android:textSize="18dp"
                        android:padding="2dp"
                        android:textColor="@color/primary_text"
                        android:gravity="center|left"
                        android:text="@string/clear_cache"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                    <TextView
                        android:id="@+id/text_view_cache_value"
                        android:padding="2dp"
                        android:textSize="14dp"
                        android:layout_weight="1"
                        android:gravity="center|left"
                        android:text="@string/label_cache"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
            <RelativeLayout
                android:background="@drawable/border_bottom"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:id="@+id/linearLayout_policy_privacy"
                    android:paddingBottom="@dimen/activity_vertical_margin"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:paddingTop="@dimen/activity_vertical_margin"
                    android:clickable="true"
                    android:background="?attr/selectableItemBackground"
                    android:orientation="horizontal"
                    android:layout_marginRight="0dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_marginRight="10dp"
                        android:padding="5dp"
                        android:tint="@color/primary_text_light"
                        app:srcCompat="@drawable/ic_lock"
                        android:layout_width="40dp"
                        android:layout_height="40dp" />
                    <TextView

                        android:textSize="18dp"
                        android:padding="2dp"
                        android:textColor="@color/primary_text"
                        android:gravity="center|left"
                        android:text="@string/policy_privacy"
                        android:layout_width="match_parent"
                        android:layout_height="40dp" />
                </LinearLayout>

            </RelativeLayout>
            <RelativeLayout
                android:background="@drawable/border_bottom"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:paddingBottom="@dimen/activity_vertical_margin"
                    android:paddingLeft="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:paddingTop="@dimen/activity_vertical_margin"
                    android:id="@+id/linearLayout_contact_us"
                    android:clickable="true"
                    android:background="?attr/selectableItemBackground"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_marginRight="10dp"
                        android:padding="5dp"
                        android:tint="@color/primary_text_light"
                        app:srcCompat="@drawable/ic_email_profile"
                        android:layout_width="40dp"
                        android:layout_height="40dp" />
                    <TextView
                        android:textSize="18dp"
                        android:padding="2dp"
                        android:textColor="@color/primary_text"
                        android:gravity="center|left"
                        android:text="@string/contact_us"
                        android:layout_width="match_parent"
                        android:layout_height="40dp" />
                </LinearLayout>

            </RelativeLayout>
            <LinearLayout
                android:clickable="true"
                android:background="?attr/selectableItemBackground"
                android:orientation="vertical"
                android:id="@+id/linear_layout_hash"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout

                    android:background="@drawable/border_bottom"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:paddingBottom="@dimen/activity_vertical_margin"
                        android:paddingLeft="@dimen/activity_horizontal_margin"
                        android:paddingRight="@dimen/activity_horizontal_margin"
                        android:paddingTop="@dimen/activity_vertical_margin"
                        android:orientation="horizontal"
                        android:layout_marginRight="60dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_marginRight="10dp"
                            android:padding="5dp"
                            android:tint="@color/primary_text_light"
                            app:srcCompat="@drawable/ic_info_black"
                            android:layout_width="40dp"
                            android:layout_height="40dp" />
                        <TextView
                            android:textSize="18dp"
                            android:padding="2dp"
                            android:textColor="@color/primary_text"
                            android:gravity="center|left"
                            android:text="@string/version_label"
                            android:layout_width="match_parent"
                            android:layout_height="40dp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/text_view_version"
                        android:textSize="14dp"
                        android:padding="2dp"
                        android:textAlignment="center"
                        android:text="V 1.2"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_width="60dp"
                        android:layout_height="70dp"
                        android:layout_alignParentRight="true" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>
